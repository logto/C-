#include <iostream>
using namespace std;

enum mMenting {red,black,yellow};


int main(){


	switch (mMenting) {
		case red:
			cout << "red = ";
			break;
		case black:
			cout << "black = ";
			break;
		case yellow:
			cout << "yellow = ";
			break;
	}


    return 0;
}





